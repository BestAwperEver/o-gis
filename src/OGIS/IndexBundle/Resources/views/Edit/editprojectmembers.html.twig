{% set is_admin = false %}
{% set is_member = false %}
{% set is_founder = false %}
{% if app.user != null %}
    {% if is_granted('ROLE_ADMIN') %}
        {% set is_admin = true %}
    {% else %}
        {% for user in project.participants %}
            {% if user.user.id == app.user.id %}
                {% set is_member = true %}
                {% if user.rank == 'Administrator' %}
                    {% set is_admin = true %}
                {% elseif user.rank == 'Founder' %}
                    {% set is_founder = true %}
                    {% set is_admin = true %}
                {% endif %}
            {% endif %}
        {% endfor %}
    {% endif %}
{% endif %}

