		<link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
		<title>Deleting {{ entitytype_rp }} "{{ entityname }}"</title>
		<link rel="stylesheet" href="{{ asset('./css/buttonlink.css') }}" />
		<style>
			.questionblock{
				width: 80%;
				min-width: 400px;
				border: 2px solid #cfa90e;
				background: #fff962;
				margin-left: auto;
				margin-right: auto;
				margin-top: 10px;
				margin-bottom: 16px;
				padding: 16px;
			}
		</style>
	</head>
	<body style="width:100%; position:absolute; top:-8px; left:-8px;">

		{% use 'OGISIndexBundle:Default:header.html.twig' %}
		{% block header %}
			{{ parent() }}
		{% endblock %}

		{% block bodycontent %}
			<table class="questionblock">
				<tr>
					<td rowspan="2" width="128px"> <img src="{{ asset('./img/warning.png') }}"/> </td>
					<td colspan="2" style="font-size:24px;text-align:center;">
					Are you sure you want to delete {{ entitytype }} "<b style="display:inline;color:#8f0000">{{ entityname }}</b>" ?
					</td>
					<td rowspan="2" width="128px"> <img src="{{ asset('./img/warning.png') }}"> </td>
				</tr>
				<tr>
					<td colspan="2" style="text-align:center;" valign="top">
						<i>Deletion isn't reversible and your {{ entitytype }} can't be restored.<br/> All data will be lost.</i>
					</td>
				</tr>
				<tr>
					<td>&nbsp;</td>
					<td style="text-align:center;">
						<a class="buttonlink" href="{{ path('show' ~ entitytype_en, {id: entityid}) }}">No</a>
					</td>
					<td style="text-align:center;">
						<a class="buttonlink" href="{{ path('delete' ~ entitytype_en, {id: entityid}) }}">Yes, delete</a></td>
					<td>&nbsp;</td>
				</tr>
			</table>
		{% endblock %}

		{% block footer %}
			{{ parent() }}
		{% endblock %}

	</body>
</html>
