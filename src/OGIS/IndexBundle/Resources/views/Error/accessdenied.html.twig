		<link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
		<title>{{ caption }}</title>
		<style type="text/css">
			.infobox{
				width: 80%;
				background: #e9c9c9;
				border: solid 2px #a00000;
				color: #d00000;
				padding-top: 10px;
				padding-bottom: 10px;
				font-weight: bold;
				font-size: 28px;
				margin-top: 15px;
				margin-bottom: 15px;
				min-height: 128px;
			}
			.tip{
				color: #900000;
				font-size: 18px;
				padding-top: 5px;
				padding-bottom: 5px;
			}
		</style>
	</head>

	<body style="width:100%; position:absolute; top:-8px; left:-8px;">

		{% use 'OGISIndexBundle:Default:header.html.twig' %}
		{% block header %}
			{{ parent() }}
		{% endblock %}

		{% block bodycontent %}

			<center>
				<table class="infobox">
					<tr>
						<td width="96px" {% if tip != "" %}rowspan="2"{% endif %} valign="middle">
							<center>
								<img src="{{ asset('./img/stop.png') }}"/>
							</center>
						</td>
						<td>
							<center>{{ message }}</center>
						</td>
						<td width="96px" {% if tip != "" %}rowspan="2"{% endif %} valign="middle">
							<center>
								<img src="{{ asset('./img/stop.png') }}"/>
							</center>
						</td>
					</tr>
				{% if tip != "" %}
					<tr>
						<td class="tip">
							<center>
								{{ tip|raw }}
							</center>
						</td>
					</tr>
				{% endif %}
				</table>
			</center>
		{% endblock %}

		{% block footer %}
			{{ parent() }}
		{% endblock %}
	</body>
</html>
