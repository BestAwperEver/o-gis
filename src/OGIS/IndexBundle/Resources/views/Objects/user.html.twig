        }});
        $( "#errormessagewinow" ).dialog({
            autoOpen: false,
            resizable: false,
            zIndex: 9999,
            height: 'auto',
            width: 400,
            modal: false,
            buttons: { OK : function(){ $(this).dialog("close"); }
        }});
        $( "#targetcatalogselector" ).dialog({
            autoOpen: false,
            resizable: false,
            zIndex: 9999,
            height: 'auto',
            width: 550,
            modal: false,
            buttons: [
                { text: "OK", click: function(){ sendAddToFavoritesRequest(null); $(this).dialog("close"); } },
                { text: "Cancel", click: function(){ buffer = null; $(this).dialog("close"); } }]
            });
        $( "#writemessage" ).dialog({
            autoOpen: false,
            resizable: false,
            zIndex: 9999,
            height: 'auto',
            width: 400,
            modal: false,
            buttons: [
                { text: "Send", click: function(){ sendMessageToUser(); $(this).dialog("close"); } },
                { text: "Cancel", click: function(){ $(this).dialog("close"); } }]
            });
        </script>

        {% endblock %}
            
        {% block footer %}
            {{ parent() }}
        {% endblock %}
    </body>
</html>
