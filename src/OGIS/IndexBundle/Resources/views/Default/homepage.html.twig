		<link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
		<link rel="stylesheet" href="{{ asset('./css/ogis_styles.css') }}" />
		<title>Project O-GIS</title>
		<style>
			.contentbox{
				width: calc( 100% - 350px );
				float: left;
				height: 100%;
				padding-left: 14px;
				padding-right: 14px;
				border: 2px solid #ccc;
				border-radius: 20px;
				color: #aaa;
				overflow-y: auto;
			}
			.centermessage{
				font-size: 24px;
				position: relative;
				transform: translateY(50%)
			}
			.centermessagetext{
				font-size: 14px;
				color: #2A2A2A;
			}
			.newsbox{
				border: 2px solid #ccc;
				border-radius: 20px;
				width: 300px;
				float: right;
				height: 100%;
			}
			.mainbody{
				width: 80%;
				margin-left: auto;
				margin-right: auto;
				height: calc( 100% - 250px );
			}
			.newsbkg{
				background: #efefff;
				border-bottom: 1px solid #ccc;
				border-top-left-radius: 20px;
				border-top-right-radius: 20px;
				padding: 4px;
				font-size: 18px;
			}
		</style>
		<script>
			console.log({{news|length}});
		</script>
	</head>

	<body style="width:100%;position:absolute;top:-8px;left:-8px;height:100%">

		{% use 'OGISIndexBundle:Default:header.html.twig' %}
		{% block header %}
			{{ parent() }}
		{% endblock %}

		{% block bodycontent %}
			<center>
				<h1>Welcome to project O-GIS</h1>
			</center>
			<div class="mainbody">
				<div class="contentbox">
				
				</div>
				<div class="newsbox">
					<div class="newsbkg">
						<b><center>Project O-GIS news</center></b>
					</div>
					<div style="overflow-y:auto;">
						{% if news|length > 0 %}
							{% for item in news %}
								<div style="margin:4px;border:1px solid #ccc;">
									<div style="background:#efefef;border-bottom:1px solid #ccc;">
										<center><b>{{ item.title }}</b></center>
									</div>
									<div style="padding:4px;">
										{{ item.text }}
									</div>
									<div style="background:#fbfbfb;border-top:1px solid #ccc;text-align:right;padding-right:4px;font-size:13px;">
										Author: <a href="{{ path('showuser', {id: item.author.id}) }}">{{ item.author.username }}</a>
									</div>
								</div>
							{% endfor %}
						{% else %}
							<center style="padding:4px">There are no news</center>
						{% endif %}
					</div>
				</div>
			</div>
			<p>&nbsp;</p>
		{% endblock %}

		{% block footer %}
			{{ parent() }}
		{% endblock %}
	</body>
</html>
