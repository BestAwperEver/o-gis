{% block header %}
	<div style="width:100%; height: 30px; background:#eeeeee; border-bottom:2px solid #999999;">
		<div style="color:#4040af; font-weight:bold; font-size:24px; padding-top:1px; padding-bottom:1px; padding-left:10px; float:left;">O-GIS</div>
		<div style="float:left; height:100%; padding-top:5px; padding-left:36px;">
			<span style="display:inline;height:100%;font-size:16px;border-left:1px solid #4040af;padding-left:12px;padding-right:12px;">
				<a href="{{ path('homepage') }}"><b>Homepage</b></a>
			</span>
			<span style="display:inline;height:100%;font-size:16px;border-left:1px solid #4040af;padding-left:12px;padding-right:12px;">
				<a href="#" onclick="window.history.go(-1)"><b>Back</b></a>
			</span>
		</div>
		<div style="float:right; margin-right:10px; padding-top:4px;">
			{% if app.user == true %}
				<b>{{ app.user.username }}</b> :: <a href="{{ path('showuser', {'id' : app.user.id}) }}">Your Profile</a> |
{#			{% if app.user.roles[0] == "ROLE_ADMIN" or app.user.roles[0] == "ROLE_SUPER_ADMIN" or app.user.roles[0] == "ROLE_SYSTEM" %}
					<a href="./app.php/admin" target="_blank">Admin dashboard</a> |
				{% endif %} #}
				<a href="{{ path('fos_user_security_logout') }}">Log out</a>
			{% else %}
				<a href="{{ path('fos_user_security_login') }}">Log in</a> | <a href="{{ path('fos_user_registration_register') }}">Sign up</a>
			{% endif %}
		</div>
	</div>
{% endblock %}

{% block footer %}
	<center>(c) O-GIS team, 2014 - {{ "now"|date('Y')}}</center>
{% endblock %}
